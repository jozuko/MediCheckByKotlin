<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background"/>
            <corners android:radius="@dimen/input_background_radius"/>
            <padding
                android:bottom="@dimen/input_background_radius"
                android:top="@dimen/input_background_radius"/>
        </shape>
    </item>

    <!-- underline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_shadow"/>
            <padding android:bottom="@dimen/input_background_under_bar_height"/>
        </shape>
    </item>

    <!-- face -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background"/>
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap
            android:gravity="right"
            android:src="@mipmap/ic_arrow_down"/>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size
                android:height="24dp"/>
            <solid android:color="#00880000"/>
            <padding android:top="24dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="line">
            <size
                android:height="24dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/input_background_shadow"/>
            <padding android:top="-24dp"/>
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/description_button_layout"
        style="@style/DescriptionButtonParentStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/description_button_icon"
            style="@style/DescriptionButtonImageStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/description_button_text"
            style="@style/DescriptionButtonTextStyle"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/description_button_message"
            style="@style/DescriptionButtonMessageStyle"
            android:layout_below="@id/description_button_text"
            android:layout_toEndOf="@id/description_button_icon"
            android:layout_toRightOf="@id/description_button_icon"/>
    </RelativeLayout>
</LinearLayout>

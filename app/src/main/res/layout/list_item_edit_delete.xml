<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.studiojozu.medicheck.resource.custom.ShrinkButton
        android:id="@+id/button_trash"
        style="@style/SmallButtonRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/ic_trash"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.studiojozu.medicheck.resource.custom.ShrinkButton
        android:id="@+id/button_edit"
        style="@style/SmallButtonRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/button_trash"
        android:drawableLeft="@mipmap/ic_edit"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@android:id/text1"
        style="@style/StandardLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/button_edit"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:minLines="1"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"/>

</RelativeLayout>
